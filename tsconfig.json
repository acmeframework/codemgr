{
  "compilerOptions": {
    "lib": ["ES2018"],
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./build/",
    "rootDir": "./src",

    "downlevelIteration": true,
    "importHelpers": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
